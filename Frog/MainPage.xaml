<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Frog.MainPage"
             Shell.NavBarIsVisible="false">


        <Grid>
        <Grid.RowDefinitions>
        <RowDefinition Height="60"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="60"/>
        <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

                
                <Image Source="frog.jpg"
                Grid.RowSpan="4"
                Aspect="AspectFill"
                />
                
                
                
                <Button Text ="Inicio"
                    Margin="0,0,10,0"
                    Grid.Row="2"
                    HeightRequest="50"
                    CornerRadius="25"
                    BackgroundColor="#58b548"
                    TextColor="White"
                    FontSize="18"
                    />

                <Button Text ="Sobre "
                    Margin="0,0,10,0"
                    Grid.Row="3"
                    HeightRequest="50"
                    CornerRadius="25"
                    BackgroundColor="#58b548"
                    TextColor="White"
                    FontSize="18"/>
    </Grid>
</ContentPage>
